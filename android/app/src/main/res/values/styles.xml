<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
        <item name="colorPrimary">#0A1551</item>
        <item name="colorPrimaryDark">#0a154d</item>
        <item name="colorAccent">#0A1551</item>

        <!-- Optional: Stripe fields background/text tweaks -->
        <item name="android:editTextStyle">@style/StripeEditText</item>
    </style>
    <!-- Style used by Stripe inputs -->
    <style name="StripeEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">#111827</item> <!-- dark text -->
        <item name="android:backgroundTint">#D1D5DB</item> <!-- light gray underline -->
        <item name="android:textColorHint">#9CA3AF</item> <!-- placeholder gray -->
    </style>   

</resources>

# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "CI lane: run tests and bundle JS (no store upload)"
  lane :ci do
    # Run JS tests
    sh "npm test"

    # Ensure build folder exists
    sh "mkdir -p ./build"

    # Bundle React Native JS
    sh "npx react-native bundle --entry-file index.js --platform ios --dev false --bundle-output ./build/main.jsbundle"

    # Optional: build IPA locally (no upload)
    # sh "xcodebuild -workspace ios/myRNApp.xcworkspace -scheme myRNApp -configuration Release -archivePath ./build/myRNApp.xcarchive archive"
  end
end